{% extends 'base.html.twig' %}

{% block title %}{{livre.titre}}{% endblock %}

{% block body %}

<h1>{{livre.titre}}</h1>
<div class="row">
    <div class="col-12-col-md-3">
    {% if livre.imageName is defined and livre.imageName is not null %}
    <img src="{{asset ('images/livres/' ~ livre.imageName) }}" alt="" class="img-fluid">
    
    {% else %}
    <img src="{{ asset ('image/livres/imagedefaut.jpg') }}" alt="" class="img-fluid">
    {% endif %}
    </div>
    <div class="col-12 col-md-9">
    <h2>Description</h2>
    <p>{{ livre.description }}</p>
    <h2>Auteur(s)</h2>
    {% for auteur in livre.auteurs %}
    <li>{{ auteur }}</li>
    {% endfor %}

    </ul>

    </div>
</div>
{% endblock %}